<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.osu.guessthatimage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.osu.guessthatimage.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="edu.osu.guessthatimage.LoginScreen"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:permission="edu.osu.guessthatimage.LAUNCHACTIVITY"
            android:screenOrientation="unspecified" >
            <intent-filter>
                <action android:name="edu.osu.guessthatimage.LoginScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="edu.osu.guessthatimage.OptionMenu"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:permission="edu.osu.guessthatimage.LAUNCHACTIVITY"
            android:screenOrientation="unspecified" >
            <intent-filter>
                <action android:name="edu.osu.guessthatimage.OptionMenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
